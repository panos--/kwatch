{
  "name": "kwatch",
  "version": "0.0.1",
  "description": "Kubernetes Terminal UI",
  "bin": {
    "kwatch": "./dist/main.js"
  },
  "scripts": {
    "start": "npm run main",
    "build": "npm run build-ts && npm run lint",
    "main": "node dist/main.js",
    "watch-node": "nodemon dist/main.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/main.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "pkg": "./node_modules/.bin/pkg --target node10-linux-x64 dist/main.js"
  },
  "files": [ "dist/**/*" ],
  "author": "Thomas Wei√ü <panos@unbunt.org>",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "async": "^3.1.0",
    "blessed": "^0.1.81",
    "bluebird": "^3.5.5",
    "compression": "^1.7.4",
    "dotenv": "^8.0.0",
    "errorhandler": "^1.5.1",
    "fbgraph": "^1.4.4",
    "js-yaml": "^3.13.1",
    "kubernetes-client": "^8.3.4",
    "lodash": "^4.17.15",
    "lusca": "^1.6.1",
    "pluralize": "^8.0.0",
    "pug": "^2.0.4",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7",
    "winston": "^2.4.2",
    "yargs": "^14.0.0"
  },
  "devDependencies": {
    "@kubernetes/client-node": "^0.10.2",
    "@types/async": "^3.0.1",
    "@types/bcrypt-nodejs": "^0.0.30",
    "@types/blessed": "^0.1.12",
    "@types/bluebird": "^3.5.27",
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.7",
    "@types/compression": "^0.0.36",
    "@types/dotenv": "^6.1.1",
    "@types/errorhandler": "^0.0.32",
    "@types/jest": "^24.0.15",
    "@types/js-yaml": "^3.12.1",
    "@types/lodash": "^4.14.138",
    "@types/lusca": "^1.6.0",
    "@types/morgan": "^1.7.35",
    "@types/node": "^12.0.10",
    "@types/pluralize": "0.0.29",
    "@types/request": "^2.48.2",
    "@types/request-promise-native": "^1.0.16",
    "@types/shelljs": "^0.8.5",
    "@types/supertest": "^2.0.7",
    "@types/yargs": "^13.0.2",
    "@typescript-eslint/eslint-plugin": "^1.12.0",
    "@typescript-eslint/parser": "^1.12.0",
    "acorn": "^7.0.0",
    "chai": "^4.2.0",
    "concurrently": "^4.1.0",
    "eslint": "^5.0.0",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1",
    "pkg": "^4.4.0",
    "shelljs": "^0.8.3",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.6.2"
  }
}
